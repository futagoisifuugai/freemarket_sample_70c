        -#   - else
        -#     %h3.user_address_info 
        -#       = @address.prefectures
        -#       = @address.city
        -#       = @address.city_adress
       

 
    .buydetails-content__text_index
      = form_tag(action: :pay, method: :post) do
        %button 購入する

