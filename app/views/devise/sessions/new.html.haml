=render 'shared/loginheader'
.single-container
  .single-main
    .login-panel
      .login-no-account
        <p>アカウントをお持ちでない方はこちら<p/>
        <a href="#">新規会員登録</a>
      .login-form-inner
        .btn-default
          = link_to "#" do
            = icon('fab','facebook-square',class: "facebook-icon")
            = link_to "#", class: "face-btn contents" do
              Facebookでログイン
        .btn-defalt-goole
          .google-icon
          =link_to "#" , class: "google-btn contents" do
            Googleでログイン
  .login-form
    .form-inner
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.email_field :email, autofocus: true, autocomplete: "email",class:"form-mail",placeholder:"メールアドレス"
        = f.password_field :password, autocomplete: "current-password",class:"form-pass",placeholder:"パスワード"
        = f.submit "ログイン",class:"login-btn"
        .forget-pass  
          <a href="#">パスワードをお忘れの方</a>
